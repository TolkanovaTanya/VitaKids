<PaintWindow>:
    name: 'paint_window'
    FloatLayout:
        padding: 5
        spacing: 5
        pos: 0, 40
        BoxLayout:
            orientation: 'horizontal'
            PaintWidget:
                id: painter
                size_hint_x: 0.8
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: painter.pos
                        size: painter.size

    BoxLayout:
        Button:
            id: paint_back
            size_hint_y: None
            pos: 0, 0
            height: 40
            text: 'Назад'
            font_size: '20sp'
            on_release:
                painter.clear_canvas()
                app.root.current = 'main_window'
                root.manager.transition.direction = 'right'
        Button:
            id: clear_canvas
            size_hint_y: None
            pos: 0, 0
            height: 40
            text: 'Стереть'
            font_size: '20sp'
            on_press:
                painter.clear_canvas()


