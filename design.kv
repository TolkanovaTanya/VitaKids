#: import random random

WindowManager:
    MainWindow:
    RecipeWindow:
    HistoryWindow:
    PaintWindow:
    TheoryWindow:

<MainWindow>:
    name: 'main_window'
    BoxLayout:
        id: main_boxlayout
        orientation: 'vertical'
        padding: 10
        spacing: 5
        GridLayout:
            spacing: 5
            orientation: 'lr-tb'
            cols: 2
            ImageButton:
                id: main_recipe_btn
                source: 'MainWindow/1.jpg'
                allow_stretch: True
                keep_ratio: False
                size: self.size
                on_release:
                    app.root.current = 'recipe_window'
                    root.manager.transition.direction = 'left'
            ImageButton:
                id: main_history
                source: 'MainWindow/3.jpg'
                allow_stretch: True
                keep_ratio: False
                size: self.size
                on_release:
                    app.root.current = 'history_window'
                    root.manager.transition.direction = 'left'
            ImageButton:
                id: main_theory
                source: 'MainWindow/2.jpg'
                allow_stretch: True
                keep_ratio: False
                size: self.size
                on_release:
                    app.root.current = 'theory_window'
                    root.manager.transition.direction = 'left'
            ImageButton:
                id: main_fingerpainting_btn
                source: 'MainWindow/4.jpg'
                allow_stretch: True
                keep_ratio: False
                size: self.size
                on_release:
                    app.root.current = 'paint_window'
                    root.manager.transition.direction = 'left'
        Button:
            id: exit_btn
            size_hint_y: None
            height: 40
            size: self.size
            text: 'Выход'
            font_size: '20sp'
            on_release: exit()

<RecipeWindow>:
    name: 'recipe_window'

    Button:
        spacing: 5
